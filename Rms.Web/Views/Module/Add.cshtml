
@{
    Layout = null;
}
<!DOCTYPE html>
<link href="~/Scripts/layui/css/layui.css" rel="stylesheet" />
<script src="~/Scripts/layui/layui.js"></script>



<form class="layui-form layui-form-pane" action="" style="width: 60%;margin: 0 auto;margin-top: 20px">
    <div class="layui-form-item">
        <label class="layui-form-label">类别</label>
        <div class="layui-input-block">
            <input id="class" class="layui-input" lay-filter="class">
        </div>
    </div>
    <div class="layui-form-item">
        <label class="layui-form-label">名称</label>
        <div class="layui-input-block">
            <input id="name" class="layui-input" lay-filter="name">
        </div>
    </div>
    <div class="layui-form-item">
        <label class="layui-form-label">链接</label>
        <div class="layui-input-block">
            <input id="linkurl" class="layui-input" lay-filter="linkurl">
        </div>
    </div>
    <div class="layui-form-item">
        <label class="layui-form-label">控制器</label>
        <div class="layui-input-block">
            <input id="controller" class="layui-input" lay-filter="controller">
        </div>
    </div>
    <div class="layui-form-item">
        <label class="layui-form-label">描述</label>
        <div class="layui-input-block">
            <input id="description" class="layui-input" lay-filter="description">
        </div>
    </div>
</form>




<script>
            layui.use(['jquery'], function () {
                var $ = layui.jquery;

                //回传给母页面的数据
                var retdata = {};

                window.callback = function () {
                    retdata.class = $("#class").val();                    
                    retdata.name = $("#name").val();
                    retdata.linkurl = $("#linkurl").val();
                    retdata.controller = $("#controller").val();
                    retdata.description = $("#description").val();
                    return JSON.stringify(retdata);
                };

            })


</script>
